# =============================================================================
# Development Environment Configuration
# =============================================================================
# Copy this file to .env.development and customize as needed.
# SECURITY: Variables prefixed with VITE_ are exposed to client code.
# =============================================================================

# Application Configuration
VITE_APP_ENV=development
VITE_APP_BASE_URL=http://localhost:5173
VITE_APP_PROXY_URL=

# API Proxy Configuration
VITE_API_TARGET=https://jsonplaceholder.typicode.com/posts
# VITE_API_WS_TARGET=ws://localhost:3000

# API Middleware Configuration
VITE_API_ENABLE_LOGGING=true
VITE_API_ENABLE_CORS=true

# Rate Limiting Configuration
VITE_API_RATE_LIMIT_ENABLED=true
VITE_API_RATE_LIMIT_MAX=100
VITE_API_RATE_LIMIT_WINDOW=60000

# Third-Party Services
# VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# SSG Dynamic Routes API (Optional)
# VITE_GUIDES_API_ENDPOINT=https://api.example.com/guides
# VITE_GUIDES_API_METHOD=GET
# VITE_GUIDES_API_HEADERS={"Authorization": "Bearer YOUR_TOKEN"}
# VITE_GUIDES_API_BODY={"filter": "published"}
# VITE_GUIDES_API_RESPONSE_PATH=data.guides
# VITE_GUIDES_API_SLUG_FIELD=slug
# VITE_GUIDES_API_TIMEOUT=10000
