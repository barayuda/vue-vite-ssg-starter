{
  "name": "vite-ssg-vue-starter",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "description": "Boilerplate for Vue 3 + Vite + ViteSSG with file-based routing, Pinia, Tailwind, and mock APIs.",
  "author": "Bara <bara.g@archipelagohotels.com> <https://github.com/barayuda>",
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite-ssg build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint \"./**/*.{vue,postcss,css}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tailwindcss/vite": "catalog:",
    "@unhead/vue": "catalog:",
    "@vueuse/core": "catalog:",
    "nprogress": "catalog:",
    "pinia": "catalog:",
    "prism-theme-vars": "catalog:",
    "tailwindcss": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:",
    "vue3-recaptcha-v2": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/vue": "catalog:",
    "@types/node": "catalog:",
    "@types/nprogress": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "@vue/test-utils": "catalog:",
    "beasties": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "gray-matter": "catalog:",
    "happy-dom": "catalog:",
    "lint-staged": "catalog:",
    "markdown-it-prism": "catalog:",
    "postcss-html": "catalog:",
    "rollup": "catalog:",
    "simple-git-hooks": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-recommended-vue": "catalog:",
    "stylelint-config-standard": "catalog:",
    "stylelint-order": "catalog:",
    "typescript": "catalog:",
    "unplugin-vue-markdown": "catalog:",
    "vite": "catalog:",
    "vite-plugin-compression": "catalog:",
    "vite-plugin-pages": "catalog:",
    "vite-plugin-pages-sitemap": "catalog:",
    "vite-plugin-vue-devtools": "catalog:",
    "vite-plugin-vue-layouts": "catalog:",
    "vite-ssg": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.{vue,postcss,css}": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
